@article{miersch:nima96,
title = "Fast scintillators as radiation resistant heavy-ion detectors",
journal = "Nuclear Instruments and Methods in Physics Research Section A: Accelerators, Spectrometers, Detectors and Associated Equipment",
volume = "369",
number = "1",
pages = "277 - 283",
year = "1996",
issn = "0168-9002",
